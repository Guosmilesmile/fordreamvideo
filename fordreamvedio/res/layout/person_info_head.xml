<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FAEEDE"
    android:orientation="vertical"
    android:id="@+id/userinfoview"
     xmlns:app="http://schemas.android.com/apk/res/cn.edu.xmu.ForDream">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        >
    <FrameLayout
 	     android:layout_width="fill_parent"
    	 android:layout_height="400dp">
    <SurfaceView
    	 android:layout_width="fill_parent"
    	 android:layout_height="350dp"
    	android:id="@+id/personinfo_surfaceView"
    	/>
	<ImageView 
	     android:layout_width="fill_parent"
    	 android:layout_height="350dp"
    	 android:scaleType="fitXY"
    	 android:id="@+id/personinfo_videoimg"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" 
        >
		<ImageView 
		   android:layout_width="fill_parent"
    	   android:layout_height="25dp"
    	   android:scaleType="fitXY"
    	   android:layout_alignParentBottom="true"
    	   android:layout_marginBottom="50dp"
		   android:src="@drawable/square_item_videobar" 
		    />
        <cn.edu.xmu.ForDream.util.RoundImageView
            android:id="@+id/userpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10px"
            android:layout_marginBottom="25dp"
             android:background="@drawable/square_item_headbackground"
             />

        <TextView
            android:id="@+id/personinfo_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_toRightOf="@id/userpic"
           	android:layout_alignTop="@id/userpic"
           	android:layout_marginTop="5dp"
           	android:layout_marginLeft="10dp"
            android:text="用户名"
            android:textStyle="bold"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/personinfo_userschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_toRightOf="@id/personinfo_username"
           	android:layout_alignTop="@id/personinfo_username"
           	android:layout_marginLeft="20dp"
            android:text="厦门大学"
            android:textStyle="bold"
            android:textColor="#333333" />
        <info.hoang8f.widget.FButton
	        android:id="@+id/personinfo_setting"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:minHeight="25dp"
	        android:layout_marginLeft="150dp"
	        android:paddingTop="-5dp"
	        android:layout_toRightOf="@id/personinfo_username"
			android:layout_alignTop="@id/userpic"
			fbutton:buttonColor="#AC8969"
	        android:drawableLeft="@drawable/userinfo_set_edit_16"
	        android:paddingLeft="5dp"
	        android:textColor="@android:color/white"
	        fbutton:shadowEnabled="true"
	        fbutton:shadowHeight="3dp"
	        android:textSize="12dp"
	        android:text="关注" />
   		<RelativeLayout
   		    android:layout_width="150dp"
   		    android:layout_height="50dp"
   		    android:layout_centerHorizontal="true"
   		    android:layout_alignParentBottom="true">
   		    <RelativeLayout 
   		        android:layout_width="70dp"
   		        android:layout_height="fill_parent">
   		        <TextView
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:layout_centerVertical="true"
   		            android:layout_alignParentLeft="true"
   		            android:id="@+id/personinfo_concernNum"
   		            android:text="100"
   		            android:textColor="#333333"
   		            android:textStyle="bold"
   		            />
   		          <TextView
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:text="关注"
   		            android:textColor="#333333"
   		            android:layout_toRightOf="@id/personinfo_concernNum"
   		            android:layout_marginLeft="5dp"
   		            android:layout_alignTop="@id/personinfo_concernNum"
   		            android:textStyle="bold"
   		            />
   		    </RelativeLayout>
   		    <LinearLayout
   				android:layout_width="1dp" 
   				android:layout_height="20dp"
   				android:layout_centerInParent="true"
   				android:background="#5E2931"
   				android:id="@+id/personinfo_partitioning1"/>
   		    <RelativeLayout 
   		        android:layout_width="70dp"
   		        android:layout_height="fill_parent"
   		        android:layout_marginLeft="10dp"
   		        android:layout_toRightOf="@id/personinfo_partitioning1">
   		        <TextView
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:layout_centerVertical="true"
   		            android:layout_alignParentLeft="true"
   		            android:id="@+id/personinfo_fansNum"
   		            android:text="300"
   		            android:textStyle="bold"
   		            android:textColor="#333333"
   		            />
   		          <TextView
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:text="粉丝"
   		            android:textColor="#333333"
   		            android:layout_marginLeft="5dp"
   		            android:textStyle="bold"
   		            android:layout_toRightOf="@id/personinfo_fansNum"
   		            android:layout_alignTop="@id/personinfo_fansNum"
   		            />   		    
   		    </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
   		       android:layout_width="fill_parent" 
   		       android:layout_height="1dp"
   		       android:layout_alignParentBottom="true"
   		       android:background="#5E2931"
   		       android:layout_marginBottom="3dp" /> 
    </RelativeLayout>

	</FrameLayout>
   	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="70dp">
	    
	  <RelativeLayout
 	           android:layout_width="120dp"
 	           android:layout_height="60dp"
 	           android:id="@+id/personinfo_videolayout">
 	     	 <TextView 
 	     	     android:layout_width="wrap_content"
 	     	     android:layout_height="wrap_content"
 	     	     android:id="@+id/personinfo_videoNum"
 	     	     android:text="0"
 	     	     android:textStyle="bold"
 	     	     android:layout_centerHorizontal="true"
 	     	     android:layout_alignParentTop="true"/>
 	     	 <ImageView 
   		      android:layout_width="70dp"
   		      android:layout_height="25dp"
   		      android:id="@+id/personinfo_video"
   		      android:layout_centerHorizontal="true"
   		      android:layout_below="@id/personinfo_videoNum"
   		      android:layout_marginTop="5dp"
   		     />
 	    <ImageView
	    android:layout_width="50dp"
        android:layout_height="2dp"
        android:id="@+id/personinfo_selectvideobar"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"       
        />     
 	    </RelativeLayout> 
   	    
   	     <LinearLayout
   			android:layout_width="1dp" 
   			android:layout_height="30dp"
   			android:layout_centerVertical="true"
   			android:background="#5E2931"
   			android:id="@+id/personinfo_partitioning2"
   			android:layout_toRightOf="@id/personinfo_videolayout"/>
   	    
	  <RelativeLayout
 	           android:layout_width="120dp"
 	           android:layout_height="60dp"
 	           android:id="@+id/personinfo_sharelayout"
 	           android:layout_toRightOf="@id/personinfo_partitioning2">
 	     	 <TextView 
 	     	     android:layout_width="wrap_content"
 	     	     android:layout_height="wrap_content"
 	     	     android:id="@+id/personinfo_shareNum"
 	     	     android:text="10"
 	     	     android:textStyle="bold"
 	     	     android:layout_centerHorizontal="true"
 	     	     android:layout_alignParentTop="true"/>
 	     	 <ImageView 
   		      android:layout_width="70dp"
   		      android:layout_height="25dp"
   		      android:layout_centerHorizontal="true"
   		      android:layout_below="@id/personinfo_shareNum"
   		      android:id="@+id/personinfo_shareimg"
   		      android:layout_marginTop="5dp"
   		     /> 
 	    <ImageView
	    android:layout_width="50dp"
        android:layout_height="2dp"
        android:id="@+id/personinfo_selectsharebar"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"       
        />    		        
 	    </RelativeLayout>   	    
   	     <LinearLayout
   			android:layout_width="1dp" 
   			android:layout_height="30dp"
   			android:layout_centerVertical="true"
   			android:background="#5E2931"
   			android:id="@+id/personinfo_partitioning3"
   			android:layout_toRightOf="@id/personinfo_sharelayout"/>   	    

   		<RelativeLayout
  		       android:layout_width="120dp"
 	           android:layout_height="60dp"
 	           android:id="@+id/personinfo_collectlayout"
 	           android:layout_toRightOf="@id/personinfo_partitioning3" >
 	     	 
  	     	 <TextView 
 	     	     android:layout_width="wrap_content"
 	     	     android:layout_height="wrap_content"
 	     	     android:id="@+id/personinfo_collectNum"
 	     	     android:text="10"
 	     	     android:textStyle="bold"
 	     	     android:layout_centerHorizontal="true"
 	     	     android:layout_alignParentTop="true"/>
 	     	 <ImageView 
   		      android:layout_width="70dp"
   		      android:layout_height="25dp"
   		      android:layout_centerHorizontal="true"
   		      android:layout_below="@id/personinfo_collectNum"
   		      android:id="@+id/personinfo_collectimg"
   		      android:layout_marginTop="5dp"
   		     />   
 	    <ImageView
	    android:layout_width="50dp"
        android:layout_height="2dp"
        android:id="@+id/personinfo_selectcollectbar"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"       
        />      		     		    
   		</RelativeLayout>	  
	  
   	    <RelativeLayout
   			android:layout_width="fill_parent" 
   			android:layout_height="10dp"
   			android:layout_alignParentBottom="true">    		
    		<LinearLayout
   		       android:layout_width="fill_parent"
   		       android:layout_height="1dp"
   		  	   android:layout_alignParentTop="true"
   		  	   android:background="#5E2931"/>
   		   <LinearLayout
   			android:layout_width="fill_parent" 
   			android:layout_height="5dp"
   			android:layout_centerVertical="true"			
   			android:background="@drawable/userinfo_head_partitioning"/>  		       
   		<!--    <LinearLayout
   		       android:layout_width="fill_parent"
   		       android:layout_height="1dp"
   		  	   android:layout_alignParentBottom="true"
   		  	   android:background="#5E2931"/>   
   		  	    -->
   		   </RelativeLayout>    
	</RelativeLayout>

    </LinearLayout>
</LinearLayout>
