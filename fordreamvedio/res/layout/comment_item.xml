<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:emojicon="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
            
        <RelativeLayout
            android:id="@+id/comment_item_first"
            android:layout_width="fill_parent"
            android:layout_height="80dp" >

            <cn.edu.xmu.ForDream.util.RoundImageView
                android:id="@+id/comment_item_autohorImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/square_item_headbackground" />

            <TextView
                android:id="@+id/comment_item_authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/comment_item_autohorImg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/comment_item_autohorImg"
                android:text="Jonsen"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/comment_item_autohorImg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="7月21日"
                android:textColor="#333333"
                android:textSize="10dp"
                android:textStyle="bold" />

            <!-- <TextView
                android:id="@+id/comment_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="I will love you till the end of time.I would wait a million years"
                android:textColor="#000000" /> -->
            
            <com.rockerhieu.emojicon.EmojiconTextView
	            android:id="@+id/comment_item_content"
	            android:text="I \ue32d emojicon"
	            android:textColor="#000000"
	            emojicon:emojiconSize="28sp"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="40dp"
	            android:layout_marginRight="40dp"
	            android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        
        <RelativeLayout
            android:id="@+id/comment_item_second"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/comment_item_first" >

        <RelativeLayout
            android:id="@+id/comment_item_supportlayout"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp">


        	<ImageView
        	    android:id="@+id/comment_item_support"
        	    android:layout_width="30dp"
        	    android:layout_height="30dp"
        	    android:src="@drawable/square_item_like" />

        	<TextView
        	    android:id="@+id/comment_item_supportNum"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_below="@id/comment_item_support"
        	    android:layout_centerHorizontal="true"
        	    android:layout_alignParentBottom="true"
        	    android:text="23"
        	    android:textColor="#333333"
        	    android:textSize="10dp"
        	    android:textStyle="bold" />

    	</RelativeLayout>
    
    </RelativeLayout>
    </RelativeLayout>
