<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/company_square_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee" 
     xmlns:listViewAttr="http://schemas.android.com/apk/res/cn.edu.xmu.ForDream"
    xmlns:app="http://schemas.android.com/apk/res/cn.edu.xmu.ForDream">


    <cn.edu.xmu.ForDream.util.DropDownListView
        android:id="@+id/company_square_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:listSelector="#00000000"
        android:drawSelectorOnTop="false"
        listViewAttr:isAutoLoadOnBottom="true"
        listViewAttr:isDropDownStyle="true"
        listViewAttr:isOnBottomStyle="true"
         />


    <cn.edu.xmu.ForDream.util.FloatingActionButton
        android:id="@+id/company_button_floating_action"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/btn_darkgrey_bg" />

</RelativeLayout>
