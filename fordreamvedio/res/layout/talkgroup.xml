<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res/cn.edu.xmu.ForDream"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <EditText
        android:id="@+id/search_group"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:hint="请输入关键词"
        android:inputType="text"
        android:maxLines="1" />
    <cn.edu.xmu.ForDream.group.GroupListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:background="#fff4f7f9"
        android:cacheColorHint="#00000000"
        android:divider="#dddbdb"
        android:dividerHeight="1dp"
        sp:right_width="240dp"
      />
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >
    <info.hoang8f.widget.FButton
        android:id="@+id/creategroup"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#78ddab"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="新建群组" />
	<info.hoang8f.widget.FButton
        android:id="@+id/joingroup"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#78ddab"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="申请群组" />
	<info.hoang8f.widget.FButton
        android:id="@+id/searchgroup"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#78ddab"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="搜索群组" />
	<info.hoang8f.widget.FButton
        android:id="@+id/managegroup"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#78ddab"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="管理群组" />
   
    </LinearLayout>
</LinearLayout>
	
</RelativeLayout>