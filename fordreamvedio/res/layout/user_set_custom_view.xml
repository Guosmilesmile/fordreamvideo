<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:duplicateParentState="true" 
	android:paddingLeft="10dip"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:minHeight="40dip">
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
		android:layout_centerVertical="true"
        android:layout_gravity= "center">
        <cn.edu.xmu.ForDream.util.RoundImageView
            android:id="@+id/user_set_autohorImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/square_item_headbackground"
            android:src="@drawable/logo_qq"
            android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/user_set_authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/user_set_autohorImg"
                android:layout_toRightOf="@id/user_set_autohorImg"
                android:layout_marginLeft="10dp"
                android:text="Jonsen"
                style="@style/content_page_large_text"
                android:textColor="#383838" />
            
            <TextView  
       		 	android:layout_width="wrap_content"  
        		android:layout_height="wrap_content"  
        		android:layout_weight="1" /> 
            
            <ImageView
                android:id="@+id/user_set"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/black_next" />
        
    </LinearLayout>
		
</RelativeLayout>