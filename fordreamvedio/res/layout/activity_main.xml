<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res/cn.edu.xmu.ForDream"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
 	<EditText
        android:id="@+id/search_box"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:hint="请输入关键词"
        android:inputType="text"
        android:maxLines="1" />
    <cn.edu.xmu.ForDream.friend.SwipeListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:background="#fff4f7f9"
        android:cacheColorHint="#00000000"
        android:divider="#dddbdb"
        android:dividerHeight="1dp"
        sp:right_width="250dp"
        />

   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAEEDE"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >
    <info.hoang8f.widget.FButton
        android:id="@+id/findfriend"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#AC8969"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="查找好友" />
	<info.hoang8f.widget.FButton
        android:id="@+id/addfriend"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#AC8969"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="添加好友" />
	<info.hoang8f.widget.FButton
        android:id="@+id/friendifo"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#AC8969"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="好友消息" />
	<info.hoang8f.widget.FButton
        android:id="@+id/morefriend"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="#AC8969"
        fbutton:shadowHeight="3dp"
        android:textSize="12dp"
        android:text="更多" />
   
    </LinearLayout>
</LinearLayout>
	
</RelativeLayout>