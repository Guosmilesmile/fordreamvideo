<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:ui="http://schemas.android.com/apk/res/cn.edu.xmu.ForDream"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"
    android:background="#ffd3d3d3">	

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#78ddab" >

        <RelativeLayout
            android:id="@+id/topmenu_positionlayout"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/topmenu_positionImage"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/topmenu_appnameimg" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/set_return"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_left" />

    </RelativeLayout>
    
    <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"  
		    android:layout_height="wrap_content">	

				<br.com.dina.ui.widget.UIButton 
				    android:id="@+id/account_bound_Button"
				    android:layout_width="fill_parent"  
				    android:layout_height="fill_parent"
		    		ui:title="帐号绑定"
		    		android:padding="10dip" />	
		    		
		</LinearLayout>
    
    <ScrollView
		android:id="@+id/scrollView" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" >
		
		<br.com.dina.ui.widget.UITableView android:id="@+id/set_tableView" style="@style/UITableView" />
	
	</ScrollView>
		
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"  
		    android:layout_height="wrap_content">	

				<!-- <br.com.dina.ui.widget.UIButton 
				    android:id="@+id/exit_Button"
				    android:layout_width="fill_parent"  
				    android:layout_height="fill_parent"
		    		ui:title="退出登陆"
		    		android:padding="10dip" /> -->	
		    		
				<info.hoang8f.widget.FButton
		            android:id="@+id/exit_Button"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="20dp"
		            android:layout_marginRight="20dp"
		            android:layout_marginTop="10dp"
		            android:minWidth="@dimen/demo_button_min_width"
		            android:minHeight="@dimen/demo_button_min_height"
		            android:textColor="@android:color/white"
		            fbutton:shadowEnabled="true"
		            fbutton:buttonColor="@color/fbutton_color_emerald"
		            android:text="退出登陆" />
		</LinearLayout>
	
</LinearLayout>